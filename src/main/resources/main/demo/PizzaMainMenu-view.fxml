<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="800.0" spacing="30.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.demo.PizzaController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <!-- Title Section -->
        <Label alignment="CENTER" prefHeight="60.0" prefWidth="600.0" text="RU PIZZA" textAlignment="CENTER" style="-fx-font-size: 52px; -fx-text-fill: #D32F2F;">
        </Label>

        <!-- Main Grid with Buttons -->
        <GridPane prefHeight="600.0" prefWidth="700.0" alignment="CENTER" hgap="40.0" vgap="40.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="300.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="300.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="150.0" prefHeight="200.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="150.0" prefHeight="200.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <!-- Specialty Pizzas Button -->
            <Button fx:id="specialtyPizzasButton" alignment="CENTER" contentDisplay="TOP" onAction="#handlePizza" text="Specialty Pizzas" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER" style="-fx-font-size: 18px;">
                <graphic>
                    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@specialty-pizzas.jpeg" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Current Order Button -->
            <Button fx:id="currentOrderButton" contentDisplay="TOP" onAction="#onCurrentOrderButtonClicked" text="Current Order" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" style="-fx-font-size: 18px;">
                <graphic>
                    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@current-order.jpeg" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Send Orders Button -->
            <Button fx:id="onStoreOrdersButton" contentDisplay="TOP" onAction="#onSendOrdersButton" text="Send Orders" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" style="-fx-font-size: 18px;">
                <graphic>
                    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@store-order.jpeg" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </GridPane>
    </children>
</VBox>
