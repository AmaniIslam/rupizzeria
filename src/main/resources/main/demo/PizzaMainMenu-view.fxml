<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.demo.PizzaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <GridPane prefHeight="510.0" prefWidth="460.0" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="120.0" minHeight="42.0" prefHeight="66.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="502.0" minHeight="100.0" prefHeight="494.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Main Title Label -->
                <Label alignment="CENTER" prefHeight="27.0" prefWidth="461.0" text="RU PIZZA" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.columnSpan="2">
                    <font>
                        <Font name="Impact" size="52.0" />
                    </font>
                </Label>

                <!-- Buttons Grid -->
                <GridPane GridPane.rowIndex="1" alignment="CENTER" hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="150.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <!-- Specialty Pizzas Button -->
                    <Button fx:id="specialtyPizzasButton" alignment="CENTER" contentDisplay="TOP" onAction="#handlePizza" text="Specialty Pizzas" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                        <graphic>
                            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@specialty-pizzas.jpeg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>

                    <!-- Current Order Button -->
                    <Button fx:id="currentOrderButton" contentDisplay="TOP" onAction="#onCurrentOrderButtonClicked" text="Current Order" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                        <graphic>
                            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@current-order.jpeg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>

                    <!-- Send Orders Button -->
                    <Button fx:id="onStoreOrdersButton" contentDisplay="TOP" onAction="#onSendOrdersButton" text="Send Orders" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                        <graphic>
                            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@store-order.jpeg" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </GridPane>
            </children>
        </GridPane>
    </children>
</VBox>
